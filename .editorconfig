root = true

[*]
end_of_line = crlf
insert_final_newline = true

[**.{js,jsx,ts,tsx,css,scss,json,md}]
charset = utf-8
indent_style = tab
indent_size = tab
trim_trailing_whitespace = true

[**.*rc]
charset = utf-8
indent_style = tab
indent_size = tab
trim_trailing_whitespace = true

[**.{yaml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
